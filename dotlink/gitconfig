[user]
	name = Tony Wooster
[color]
	branch = auto
	status = auto
	diff = auto
[alias]
	amend = commit --amend
	cached = diff --cached
	co = checkout
	d = diff
	files = show --pretty=format: --name-only
	rhom = reset --hard origin/master
	s = status
	unadd = reset HEAD
        alias = !sh -c '[ $# = 2 ] && git config --global alias.\"$1\" \"$2\" && exit 0 || echo \"usage: git alias <new alias> <original command>\" >&2 && exit 1' -
        c = diff --cached
        ca = commit --amend
        ci = commit
        fixup = git commit --fixup
        forget = rm --cache --
        from = !sh -c 'git fetch && git rebase origin/master'
        rh = reset --hard
        sfrom = !sh -c 'git stash && git from && git stash pop'
        squash = git rebase --autosquash -i
        su = submodule update --init

        edit-unmerged = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; vim `f`"
        add-unmerged = "!f() { git diff --name-status --diff-filter=U | cut -f2 ; }; git add `f`"
[core]
	excludesfile = ~/.gitconfig-ignore

[include]
        path = .gitconfig-local
[rerere]
	enabled = true
[push]
	default = simple
