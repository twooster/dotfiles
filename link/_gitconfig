[user]
        name = Tony Wooster
        useConfigOnly = true

[color]
        branch = auto
        status = auto
        diff = auto

[alias]
        b = branch
        cached = diff --cached
        co = checkout
        d = diff
        rhom = reset --hard origin/master
        s = status
        ap = add -p
        ca = commit --amend
        ci = commit
        cop = checkout -p
        cpa = cherry-pick --abort
        cpc = cherry-pick --continue
        cp = cherry-pick
        rb = "!f(){ git rebase --no-verify --autosquash -i \"${@}\" ; }; f"
        forget = rm --cache --
        from = !sh -c 'git fetch && git rebase origin/master'
        fro = !sh -c 'git fetch && git rebase "origin/$1"'
        fu = commit --fixup
        rba = rebase --abort
        rbc = rebase --continue
        sui = submodule update --init
        apum = "!sh -c 'UM=$(git diff --name-status --diff-filter=U | cut -f2) ; test -n \"${UM}\" && git reset -- ${UM} && git add -p ${UM}'"
        ol = log --graph --oneline --decorate
        pso = !sh -c 'git push --set-upstream origin "$( git rev-parse --abbrev-ref HEAD )"'

[core]
        excludesfile = ~/.gitconfig-ignore

[diff]
        algorithm = histogram

[merge]
        conflictstyle = diff3
        ff = only

[pull]
        ff = only

[rebase]
        autoSquash = true

[rerere]
        enabled = true

[status]
        short = true
        branch = true

[stash]
        showPatch = true

[push]
        default = simple

[include]
        path = .gitconfig-local
