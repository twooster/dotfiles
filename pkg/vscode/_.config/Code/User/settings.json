{
    // Prevents vscode from capturing capslock on remapped keyboard
    "keyboard.dispatch": "keyCode",
    "editor.parameterHints.enabled": false,

    "editor.renderWhitespace": "all",
    "editor.fontSize": 13,
    "editor.rulers": [80, 120],
    "terminal.integrated.fontSize": 13,
    "editor.fontFamily": "'Input Mono', 'Input', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "workbench.colorTheme": "Monokai",

    "scrolloff.scrolloff": 10,
    "alignment.surroundSpace": {
        "colon":      [-1, 1],
        "assignment": [1, 1],
        "arrow":      [1, 1],
        "comment":    2
    },

    "extension-manager.extensions": [
        "BriteSnow.vscode-toggle-quotes",
        "PeterJausovec.vscode-docker",
        "dbaeumer.vscode-eslint",
        "hoovercj.vscode-settings-cycler",
        "liuji-jim.vue",
        "mjmcloug.vscode-elixir",
        "octref.vetur",
        "s3gf4ult.monokai-vibrant",
        "tickleforce.scrolloff",
        "vilicvane.es-quotes",
        "vscodevim.vim",
        "webstp.extension-manager",
        "wwm.better-align"
    ],


    "vim.leader": " ",
    "vim.easymotion": true,
    "vim.useSystemClipboard": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j","j"],
            "after":  ["<Esc>"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        /*
        {
            "before":   ["j"],
            "after":    ["g", "j"],
        },
        {
            "before":   ["k"],
            "after":    ["g", "k"],
        },
        */
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        /*
        {
            "before":   ["j"],
            "after":    ["g", "j"],
        },
        {
            "before":   ["k"],
            "after":    ["g", "k"],
        },
        */
        {
            "before":   ["<leader>","\\"],
            "after":    [],
            "commands": [
                { "command": "workbench.action.splitEditor" }
            ],
        },
        {
            "before":   ["<leader>", "t"],
            "after":    [],
            "commands": [
                { "command": "workbench.action.quickOpen" }
            ],
        },
        {
            "before":   ["<leader>", "x"],
            "after":    [],
            "commands": [
                { "command": "workbench.action.files.save" },
                { "command": "workbench.action.closeActiveEditor" }
            ],
        },
        {
            "before":   ["<leader>", "q"],
            "after":    [],
            "commands": [
                { "command": "workbench.action.closeActiveEditor" }
            ],
        },
        {
            "before":   ["<leader>", "w"],
            "after":    [],
            "commands": [
                { "command": "workbench.action.files.save" }
            ],
        },
        {
            "before":   ["<c-b>"],
            "after":    [],
            "commands": [
                { "command": "workbench.action.toggleSidebarVisibility" }
            ],
        },
        {
            "before": ["<leader>", "e"],
            "after":  [],
            "commands": [
                { "command": "workbench.view.explorer" }
            ],
        },
        /*
        {
            "before": ["<leader>", "k", "f"],
            "after":  [],
            "commands": [
                { "command": "workbench.action.toggleFullScreen" }
            ]
        },
        {
            "before": ["<leader>", "k", "z"],
            "after":  [],
            "commands": [
                { "command": "workbench.action.toggleZenMode" }
            ],
        },
        {
            "before": ["<leader>", "k", "x"],
            "after":  [],
            "commands": [
                { "command": "workbench.view.extensions" }
            ],
        },
        {
            "before": ["<leader>", "k", "s"],
            "after":  [],
            "commands": [
                { "command": "workbench.action.openGlobalKeybindings" }
            ],
        },
        */
        {
            "before": ["<c-bs>"],
            "after":  [],
            "commands": [
                { "command": "editor.action.trimTrailingWhitespace" }
            ],
        },
        {
            "before": ["<leader>", "'"],
            "after":  ["c", "s", "\"", "'"]
        },
        {
            "before": ["<leader>", "\""],
            "after":  ["c", "s", "'", "\""]
        },
        {
            "before": ["<c-u>"],
            "after":  ["1", "5", "k"]
        },
        {
            "before": ["<c-d>"],
            "after":  ["1", "5", "j"]
        },
        {
            "before": ["<c-j>"],
            "after":  ["<c-w>", "j"]
        },
        {
            "before": ["<c-k>"],
            "after":  ["<c-w>", "k"]
        },
        {
            "before": ["<c-h>"],
            "after":  ["<c-w>", "h"]
        },
        {
            "before": ["<c-l>"],
            "after":  ["<c-w>", "l"]
        },
        {
            "before": ["<leader>", "h"],
            "after":  ["<leader>", "<leader>", "h"]
        },
        {
            "before": ["<leader>", "j"],
            "after":  ["<leader>", "<leader>", "j"]
        },
        {
            "before": ["<leader>", "k"],
            "after":  ["<leader>", "<leader>", "k"]
        },
        {
            "before": ["<leader>", "l"],
            "after":  ["<leader>", "<leader>", "l"]
        },
        {
            "before": ["<c-o>"],
            "after":  [],
            "commands": [
                { "command": "workbench.action.navigateBack" }
            ],
        },
        {
            "before": ["<c-i>"],
            "after":  [],
            "commands": [
                { "command": "workbench.action.navigateForward" }
            ],
        },
    ],

    "workbench.statusBar.visible": true,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "editor.tabSize": 2,
    "go.useLanguageServer": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "files.insertFinalNewline": true,
    "editor.renderFinalNewline": "off",
    "files.trimTrailingWhitespace": true,
    "javascript.suggest.autoImports": false,
    "typescript.suggest.autoImports": false,
    "explorer.confirmDelete": false,
    "extensions.ignoreRecommendations": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "workbench.startupEditor": "newUntitledFile",
    "python.formatting.provider": "black",
    "python.languageServer": "Pylance",
    "python.analysis.indexing": true,
    "python.analysis.typeCheckingMode": "strict",
    "editor.minimap.enabled": false,
    "[python]": {
        "editor.formatOnType": true
    },
    "[go]": {
        "editor.insertSpaces": false,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.suggest.snippetsPreventQuickSuggestions": false
    },
    "go.toolsManagement.autoUpdate": true,
    "workspaceSidebar.depth": 3,
    "cSpell.userWords": [
        "abdominals",
        "AMRAP",
        "Chakra",
        "invokable",
        "reduxjs",
        "zustand"
    ],
    "sqltools.connections": [],
    "python.analysis.userFileIndexingLimit": 5000,
    "python.analysis.autoImportCompletions": true,
    "[yaml]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.autoIndent": "keep",
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.quickSuggestions": {
            "other": true,
            "comments": false,
            "strings": true
        }
    },
    "snowflake.connectionsConfigFile": "/Users/tony/.snowflake/connections.toml",
}
